{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@config/*": ["config/*"],
      "@app/*": ["src/application/*"],
      "@database/*": ["src/database/*"],
      "@infra/*": ["src/infrastructure/*"],
      "@utils/*": ["src/infrastructure/utils/*"],
      "@middlewares/*": ["src/infrastructure/middleware/*"],
      "@http/*": ["src/infrastructure/http/*"]
    },
    "typeRoots" : [
      "./node_modules/@types",
      "src/infrastructure/@types"
    ],
  },
  "exclude": [
    "**/node_modules/*",
    "**/src/**/*.spec.ts",
    "**/@types/*",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "config/*.ts",
    "main.ts"
  ]
}
