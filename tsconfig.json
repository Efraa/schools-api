{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "build",
    "typeRoots" : [
      "./node_modules/@types",
      "src/infrastructure/@types"
    ],
  },
  "exclude": [
    "**/node_modules/*",
    "**/*.spec.ts",
    ".vscode/*"
  ],
  "include": [
    "src/**/*",
    "config/*",
    "workers/**/*",
    "__tests__/**/*"
  ]
}
